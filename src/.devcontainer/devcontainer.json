{
    "name": "ROS 2 Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "vscode"
        }
    },
    "workspaceFolder": "/root/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/root/workspace,type=bind,consistency=cached",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros",
                "vsciot-vscode.vscode-arduino"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_LOCALHOST_ONLY": "1",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        "-e", "DISPLAY=${env:DISPLAY}",
        "--privileged",
        "--device=/dev/ttyACM0",
        "--device=/dev/snd",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
        "-v", "/dev/dri:/dev/dri",
        "--group-add=dialout",
        "--group-add=audio",
        "--group-add=video"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/build,target=/root/workspace/build,type=bind",
        "source=${localWorkspaceFolder}/install,target=/root/workspace/install,type=bind",
        "source=${localWorkspaceFolder}/log,target=/root/workspace/log,type=bind"
    ],
    "postCreateCommand": "rosdep update && rosdep install --from-paths src --ignore-src -r -y && sudo chown -R vscode:vscode /root/workspace"
}
